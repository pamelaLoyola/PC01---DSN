</head>

<body>

    <nav class="navbar navbar-dark bg-dark">
        <a href="" class="navbar-brand mx-auto">Productos</a>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text center">
                <table class="table table-stripped">
                    <tr>
                        <th>ID PRODUCTO</th>
                        <th>PRODUCTO</th>
                        <th>PRECIO</th>
                        <th>ID CATALOGO</th>
                        <th>STOCK</th>
                        <th>OPTIONS</th>
                    </tr>
                    <%for (var i=0; i< products.length; i++) {%>
                    <tr>
                        <td><%= products[i].idproducto%></td>
                        <td><%= products[i].nombre%></td>
                        <td><%= products[i].precio%></td>
                        <td><%= products[i].idcat%></td>
                        <td><%= products[i].stock%></td>
                        <td>
                            <a href="/update/<%= products[i].idProducto %>" class="btn btn-info">Editar</a>
                            <a href="/delete/<%= products[i].idProducto %>" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <%}%>

            </table>
        </div>

        <div class="col-md-6 mt-4  card">
            <form action="/products" method="post">
                <h4 class="card-title">Â¡Nuevo producto!</h4>
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="producto"> 
                </div>
                <div class="form-group">
                    <input type="text" name="precio" class="form-control" placeholder="precio"> 
                </div>
                <div class="form-group">
                    <input type="text" name="catalogo" class="form-control" placeholder="catalogo"> 
                </div>
                <div class="form-group">
                    <input type="text" name="stock" class="form-control" placeholder="stock"> 
                </div>
                <div class="form-group">
                    <input type="submit"  class=" btn btn-success"> 
                </div>
            </form>

        </div>
     </div>
    </div>

</body>

</html>